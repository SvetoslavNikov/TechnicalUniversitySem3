--     MODIFY email VARCHAR(100) AFTER last_name;
-- ALTER TABLE employees
--     MODIFY email VARCHAR(100) FIRST;
-- ALTER TABLE employees
--     DROP COLUMN email;
-- ALTER TABLE employees
--     RENAME COLUMN salary TO hourly_pay;

